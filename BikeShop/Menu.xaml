<Page x:Class="BikeShop.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="Products_button" Grid.Row="1" Grid.Column="0" Margin="20" Content="Products" FontSize="14"/>
        <Button x:Name="LiveSupport_button" Grid.Row="1" Grid.Column="1" Margin="20" Content="Live Support" FontSize="14" Click="LiveSupport_button_Click"/>
        <Button x:Name="EmailSupport_button" Grid.Row="1" Grid.Column="2" Margin="20" Content="Email Support" FontSize="14" Click="EmailSupport_button_Click"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3" Text="Adventure Works" HorizontalAlignment="Center" Margin="25" FontSize="28" FontStyle="Italic" FontWeight="Bold"/>
    </Grid>
</Page>
